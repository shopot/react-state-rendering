# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 200
quote_type = double

[{*.js,*.ts,*.json,*.yml}]
indent_size = 2
indent_style = space

[{*.js,*.ts}]
quote_type = single

[*.md]
max_line_length = 0
trim_trailing_whitespace = false